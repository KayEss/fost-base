path-constant TOP : . ;
include $(TOP)/../boost-version.jam ;
include $(TOP)/fost.jam ;

variant debug-mfc : debug : <define>FOST_HAVE_MFC ;
variant release-mfc : release : <define>FOST_HAVE_MFC ;

fost-project fost-base ;

alias fost
    :
        Cpp/fost-cli
        Cpp/fost-core
        Cpp/fost-crypto
        Cpp/fost-datetime
        Cpp/fost-ftest
        Cpp/fost-test
    ;

alias docs
    :
        Docs//fost-base.html
    ;
explicit docs ;

alias tests
    :
        Cpp/fost-core-test/
        Cpp/fost-datetime-test/
    ;
explicit tests ;

alias examples
    :
        Examples/BeerCamp//primes-multi
        Examples/BeerCamp//primes-single
        Examples/BeerCamp//primes-multi-slow
        Examples/BeerCamp//primes-single-slow
        Examples/FizzBuzz/
        Examples/fprettyjson/
        Examples/Hello/
    ;
explicit examples ;
